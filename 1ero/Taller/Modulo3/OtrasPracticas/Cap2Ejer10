programa Cap2Ejer10
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  comenzar
    derecha
    mientras (HayPapelEnLaEsquina)
      tomarPapel
    mientras (HayFlorEnLaEsquina)
      tomarFlor
    repetir 4
      mover
      mientras (HayPapelEnLaEsquina)
        tomarPapel
      mientras (HayFlorEnLaEsquina)
        tomarFlor
    Informar(PosAv,PosCa)
  fin
variables
  R-info: robot1
comenzar
  AsignarArea(R-info, ciudad)
  Iniciar(R-info,1,1)
fin